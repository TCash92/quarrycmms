# QuarryCMMS Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in your actual values

# ===========================================
# Supabase Configuration (REQUIRED)
# ===========================================
EXPO_PUBLIC_SUPABASE_URL=https://xxxx.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJ...
EXPO_PUBLIC_SUPABASE_STORAGE_BUCKET=quarry-cmms-dev

# ===========================================
# Feature Flags (OPTIONAL - defaults shown)
# ===========================================
EXPO_PUBLIC_ENABLE_VOICE_NOTES=true
EXPO_PUBLIC_ENABLE_OFFLINE_PDF=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# ===========================================
# Debug Settings (OPTIONAL - defaults shown)
# ===========================================
# Valid values: debug, info, warn, error
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_SHOW_SYNC_DEBUG=true
