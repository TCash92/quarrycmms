# Supabase Configuration
# For development: use self-hosted Supabase on VPS
# For production: use Supabase Cloud
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
EXPO_PUBLIC_SUPABASE_STORAGE_BUCKET=quarry-cmms

# Feature flags
EXPO_PUBLIC_ENABLE_VOICE_NOTES=true
EXPO_PUBLIC_ENABLE_OFFLINE_PDF=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Debug settings (set to false in production)
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_SHOW_SYNC_DEBUG=false

# Sentry (optional - leave empty to disable)
EXPO_PUBLIC_SENTRY_DSN=

# Environment identifier
EXPO_PUBLIC_ENVIRONMENT=development
